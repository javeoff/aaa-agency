{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
